<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.administrator.learntocook.MainActivity">
<com.example.administrator.learntocook.view.FontView
    android:id="@+id/font"
    android:layout_marginTop="20dp"
    android:textSize="50sp"
    android:gravity="center_horizontal"
    android:layout_width="match_parent"
    android:layout_height="70dp" />
    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        >
        <ImageView
            android:src="@drawable/magnifying_glass"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <EditText
            android:id="@+id/main_et"
            android:background="@drawable/title"
            android:hint="菜谱搜索"
            android:layout_width="260dp"
            android:layout_height="match_parent" />
        <ImageView
            android:visibility="invisible"
            android:id="@+id/ben_suosou"
            android:src="@drawable/btnsearch_red"
            android:layout_width="56dp"
            android:layout_height="match_parent" />

    </LinearLayout>

        <LinearLayout
            android:layout_marginTop="16dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:layout_weight="1"
                android:layout_marginRight="5dp"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:orientation="vertical"
                android:background="#eeeeee"
                >
                <ImageView
                    android:layout_marginTop="3dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/recipe_lable_4_2"
                    android:id="@+id/image_jiachangcai"
                    android:layout_weight="1"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    />
                <TextView
                    android:layout_weight="6"
                    android:textSize="15sp"
                    android:id="@+id/text"
                    android:gravity="center"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="家常菜"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_marginRight="5dp"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:orientation="vertical"
                android:background="#eeeeee"
                >
                <ImageView
                    android:layout_marginTop="3dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/recipe_lable_5_3"
                    android:id="@+id/image_kuaishou"
                    android:layout_weight="1"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    />
                <TextView
                    android:layout_weight="6"
                    android:textSize="15sp"
                    android:gravity="center"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="快手菜"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:orientation="vertical"
                android:background="#eeeeee"
                >
                <ImageView
                    android:layout_marginTop="3dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/recipe_lable_1_1"
                    android:id="@+id/image_chaungyi"
                    android:layout_weight="1"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    />
                <TextView
                    android:layout_weight="6"
                    android:textSize="15sp"
                    android:gravity="center"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="创意菜"
                    />
            </LinearLayout>


        </LinearLayout>
    <LinearLayout
        android:layout_marginTop="3dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_weight="1"
            android:layout_marginRight="5dp"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:orientation="vertical"
            android:background="#eeeeee"
            >
            <ImageView
                android:layout_marginTop="3dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/recipe_lable_5_1"
                android:id="@+id/image_sucai"
                android:layout_weight="1"
                android:layout_width="70dp"
                android:layout_height="70dp"
                />
            <TextView
                android:layout_weight="6"
                android:textSize="15sp"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="素菜"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_marginRight="5dp"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:orientation="vertical"
            android:background="#eeeeee"
            >
            <ImageView
                android:layout_marginTop="3dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/recipe_lable_2_3"
                android:id="@+id/image_liangcai"
                android:layout_weight="1"
                android:layout_width="70dp"
                android:layout_height="70dp"
                />
            <TextView
                android:layout_weight="6"
                android:textSize="15sp"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="凉菜"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:orientation="vertical"
            android:background="#eeeeee"
            >
            <ImageView
                android:layout_marginTop="3dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/recipe_lable_4_1"
                android:id="@+id/image_hongpei"
                android:layout_weight="1"
                android:layout_width="70dp"
                android:layout_height="70dp"
                />
            <TextView
                android:layout_weight="6"
                android:textSize="15sp"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="烘焙"
                />
        </LinearLayout>


    </LinearLayout>
    <LinearLayout
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_weight="1"
            android:layout_marginRight="5dp"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:orientation="vertical"
            android:background="#eeeeee"
            >
            <ImageView
                android:layout_marginTop="3dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/recipe_lable_3_1"
                android:id="@+id/image_mianshi"
                android:layout_weight="1"
                android:layout_width="70dp"
                android:layout_height="70dp"
                />
            <TextView
                android:layout_weight="6"
                android:textSize="15sp"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="面食"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_marginRight="5dp"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:orientation="vertical"
            android:background="#eeeeee"
            >
            <ImageView
                android:layout_marginTop="3dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/recipe_lable_3_2"
                android:id="@+id/image_tang"
                android:layout_weight="1"
                android:layout_width="70dp"
                android:layout_height="70dp"
                />
            <TextView
                android:layout_weight="6"
                android:textSize="15sp"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="汤"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:orientation="vertical"
            android:background="#eeeeee"
            >
            <ImageView
                android:layout_marginTop="3dp"
                android:layout_gravity="center_horizontal"
               android:src="@drawable/recipe_lable_1_3"
                android:id="@+id/image_zzhi"
                android:layout_weight="1"
                android:layout_width="70dp"
                android:layout_height="70dp"
                />
            <TextView
                android:layout_weight="6"
                android:textSize="15sp"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="自制调味料"
                />
        </LinearLayout>
    </LinearLayout>
    <Button
        android:layout_marginTop="3dp"
        android:id="@+id/btn_classify"
        android:text="全部菜谱分类"
        android:layout_width="match_parent"
        android:layout_height="50dp" />
</LinearLayout>
